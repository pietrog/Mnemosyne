<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- WORDDEF OBJECT-->
    <style name="wordobjectname" parent="AppTheme">
        <item name="android:background">#F0F0F0</item>
    </style>


    <style name="name" parent="AppTheme">
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_blue_grey_800</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/displayBackColorLight</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="description" parent="AppTheme">
        <item name="android:textColor">@color/black_translucent</item>
        <item name="android:background">@color/displayBackColor</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="nameInList" parent="AppTheme">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_blue_grey_800</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="descriptionInList" parent="AppTheme">
        <item name="android:textColor">@color/black_translucent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Passive text when editing -->
    <style name="passiveText" parent="AppTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="editingZone" parent="AppTheme">
        <item name="android:background">@color/colorSecondaryDark</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- RemoveButton of CatalogueList, Catalogue and Dictionary fragments -->
    <style name="removeButton" parent="AppTheme">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:actionBarStyle">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
    </style>
</resources>
